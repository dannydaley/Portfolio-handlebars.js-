<div class="new-post-form">
    <form method="POST" action="/newBlogPost" enctype="multipart/form-data">
        <label for="author">author: </label>
        <input type="text" name="author" value="{{name}}" readonly>
        <label for="title" required >title: </label>
        <input type="text" name="title">
        <label for="title">image: </label>
        <input type="file" accept="image/png, image/jpeg" name="image">
        <label for="title">link: </label>
        <input type="text" name="link">
        {{!-- <input type="date" name="date"> --}}
        <div class="content-field">
            <label for="content">content:  </label>
            <textarea type="text" name="content" rows="10" cols="70"></textarea>
        </div>
        <button type="submit">POST</button>
    </form>
</div>