<div class="login-welcome">
    <h1>{{name}}'s profile</h1>
        <div class="outer-profile-container">
            <div class="profile-container">
                <div class="profile-picture">
                    <img class="dashboard-profile-image" src="{{profilePicture}}" width="100px" height="100px">
                </div>
                <div class="profile-info">
                    <h2>{{name}}</h2>
                    <p class="about-me">{{aboutMe}}</p>  
                    <h3>post count: {{posts}}</h3>
                    <h3>date joined: {{dateJoined}}</h3>
                </div>
 
            </div>
            <div class="pinned-post-container" id="{{pinned.title}}">
                <div class="pinned-post-slide">
                    <div class="pinned-post-info">
                        <p><a href="{{pinned.link}}" rel="noopener"  target="_blank">{{pinned.title}}</a></p>      
                        <p>{{{pinned.content}}}</p>
                    </div>
                    <div class="pinned-post-image-container">
                        <a href="{{pinned.link}}" rel="noopener" target="_blank">
                            <img src="{{pinned.image}}" alt="project thumbnail image">
                        </a>
                    </div>
                </div>  
                <div class="pinned-post-tags">
                    <form method="POST" action="/userProfile">
                    <p>posted by <button type="submit" value="{{pinned.author}}" class="buttonLinkText">{{pinned.author}}</button> on <button type="submit" value="{{date}}">{{date}}</button> post id: {{id}}</p></form>
                </div>
        </div>
        </div>    
</div>



<section id="projectsSection">
    <div class="filter-links">
        <ul class="filter-list">
                <form method="POST" action="/userProfile">
                    <button class="leftButton" type="submit" name="username" value="{{name}}">{{name}}'s Posts</button>
                </form>
                <form method="POST" action="/getUserSpace">
                    <button class="rightButton" type="submit" name="username" value="{{name}}">{{name}}'s Guestbook</button>
                </form> 
      
        </ul>
    </div>
    {{#each rows}}
        <!-- PROJECTS START -->
        <div class="project-slide-container" id="{{title}}">
            <div class="project-slide">
                <div class="projInfo">
                    <p><a href="{{link}}" rel="noopener"  target="_blank">{{title}}</a></p>      
                    <p>{{{content}}}</p>
                </div>
                <a href="{{link}}" rel="noopener" target="_blank">
                    <img src="{{image}}" alt="project thumbnail image">
                </a>
            </div>            
            <div class="projectTags">
                <form method="POST" action="/userProfile">
                <p>posted by <button type="submit" value="{{author}}" class="buttonLinkText">{{author}}</button> on <button type="submit" value="{{date}}">{{date}}</button> post id: {{id}}</p></form>
            </div>
        </div>
    {{/each}}
</section>